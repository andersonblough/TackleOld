<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/quote_start"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_quote_start"/>

    <TextView
        android:id="@+id/quote_text"
        android:padding="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quote goes here"
        android:textAlignment="gravity"
        android:textColor="#999"
        android:gravity="center"
        android:textSize="30dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="italic"/>

    <ImageView
        android:id="@+id/quote_end"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignEnd="@+id/quote_text"
        android:src="@drawable/ic_quote_end"
        android:layout_alignBottom="@id/quote_text"/>

    <TextView
        android:id="@+id/author_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quote_text"
        android:layout_alignEnd="@+id/quote_text"
        android:layout_margin="8dp"
        android:text="- author"
        android:textSize="18dp"/>

</RelativeLayout>